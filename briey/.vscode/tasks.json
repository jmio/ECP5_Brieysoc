{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "./make.exe -B",
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
        },
        {
            "label": "make",
            "type": "shell",
            "command": "./make.exe",
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "./make.exe clean",
            "group": "build",
        },
    ]
}